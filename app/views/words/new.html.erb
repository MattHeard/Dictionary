<h1>What does '<%= @word.word %>' mean?</h1>

<%= form_for([ @user, @word ]) do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :word, value: @word.word, hidden: true %>
  </div>
  <div class="field">
    <%= f.label :definition %><br>
    <%= f.text_area :definition, cols: 60, rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', user_path(@user) %>
