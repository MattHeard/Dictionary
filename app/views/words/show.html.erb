<p id="notice"><%= notice %></p>

<p>
  <strong>Word:</strong>
  <%= @word.word %>
</p>

<p>
  <strong>Definition:</strong>
  <% @word.definition.split.each do |word| %>
    <% if @defined_word_hash[cleanup(word)] %>
      <%= link_to word, [@user, @defined_word_hash[cleanup(word)]] %>
    <% else %>
      <%= link_to word, new_user_word_path(@user, new_word: cleanup(word)) %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Back', user_path(@user) %>
